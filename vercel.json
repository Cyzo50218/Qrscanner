{
  "builds": [
    { "src": "subscription/yearly/api/orders.js", "use": "@vercel/node" },
    { "src": "subscription/yearly/api/captureOrder.js", "use": "@vercel/node" },
    { "src": "subscription/yearly/api/paypalHelpers.js", "use": "@vercel/node" },
    { "src": "client/**", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/subscription/yearly/api/orders", "dest": "/subscription/yearly/api/orders.js" },
    { "src": "/subscription/yearly/api/orders/:orderID/capture", "dest": "/subscription/yearly/api/captureOrder.js" },
    { 
      "src": "/client/(.*)", 
      "dest": "/client/$1",
      "headers": {
        "Content-Security-Policy": "default-src 'self'; script-src 'self' https://www.paypal.com 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' https://www.paypalobjects.com data:; frame-src https://www.paypal.com https://www.sandbox.paypal.com; connect-src 'self' https://www.paypal.com https://www.sandbox.paypal.com;"
      }
    },
    { "src": "/(.*)", "dest": "index.html" },
    { "src": "/main.js", "status": 404 },
    { "src": "/App.js", "status": 404 },
    { "src": "^/$", "dest": "/index.html" },
    { "src": "/client", "dest": "/client/index.html" },
    { "src": "/((?!api/)(?!client/).*)", "dest": "/index.html" }
  ],
  "functions": {
    "subscription/yearly/api/**/*.js": {
      "runtime": "nodejs18"
    }
  }
}
