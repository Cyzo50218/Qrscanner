{
  "builds": [
    { "src": "subscription/yearly/api/orders.js", "use": "@vercel/node" },
    { "src": "subscription/yearly/api/captureOrder.js", "use": "@vercel/node" },
    { "src": "client/**", "use": "@vercel/static" },
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { 
      "src": "/subscription/yearly/api/orders", 
      "dest": "/subscription/yearly/api/orders.js",
      "methods": ["GET", "POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET, POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      }
    },
    { 
      "src": "/subscription/yearly/api/orders/(?<orderID>[^/]+)/capture", 
      "dest": "/subscription/yearly/api/captureOrder.js",
      "methods": ["POST", "OPTIONS"],
      "headers": {
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "POST, OPTIONS",
        "Access-Control-Allow-Headers": "X-Requested-With, Content-Type, Accept"
      }
    },
    { 
      "src": "/client/(.*)", 
      "dest": "/client/$1",
      "headers": {
        "Content-Security-Policy": "default-src 'self'; script-src 'self' https://www.paypal.com 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' https://www.paypalobjects.com data:; frame-src https://www.paypal.com https://www.sandbox.paypal.com; connect-src 'self' https://www.paypal.com https://www.sandbox.paypal.com;"
      }
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ]
}
